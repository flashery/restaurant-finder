{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "Bundler", // ✅ must override the "Node" above
    "module": "ESNext", // ✅ matches what Vite expects
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "jsx": "react-jsx",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src",
    "src/vite-env.d.ts",
    "../shared"
  ]
}